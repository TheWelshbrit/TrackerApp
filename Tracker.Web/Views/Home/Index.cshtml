        <h4>Chores</h4>
        <ul>
            @foreach (var c in day.ChoreActivities)
            {
                <li>@c.StartTime.ToShortTimeString()–@c.EndTime.ToShortTimeString(): @c.Activity <em>@c.Note</em></li>
            }
