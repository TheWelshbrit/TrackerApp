            {
                <li>@note.TimeNoteMade?.ToShortTimeString(): @note.Note</li>
            }
        </ul>

        <h4>Context Notes</h4>
        <ul>
            @foreach (var note in day.ContextNotes)
            {
                <li>@note.TimeNoteMade?.ToShortTimeString(): @note.Note</li>
